<%= form_with(model: section) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
        <% section.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field my-3">
    <%= form.label :location, class: "form-label" %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="field my-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="field my-3">
    <%= form.label :visible, class: "form-check-label"%>
    <%= form.check_box :visible, class: "form-check-input" %>
  </div>

  <div class="field my-3">
    <%= form.label :position, class: "form-label"%>
    <%= form.number_field :position, class: "form-control" %>
  </div>

  <div class="actions my-3">
    <%= form.submit class:  "btn btn-dark" %>
  </div>
<% end %>
