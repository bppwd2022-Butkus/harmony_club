<div class="container bg_white p-5">

  <p id="notice"><%= notice %></p>

  <div class="row">
    
    <h1 class=col-12>Sponsors</h1>

    <div class="col-12" text center>
      <table>
      <thead>
        <tr>
          <th class="pt-3 pe-3">Title</th>
          <th class="pt-3 pe-3">Website</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @sponsors.each do |sponsor| %>
          <tr>
            <td class="pt-3 pe-3"><%= sponsor.title %></td>
            <td class="pt-3 pe-3"><%= sponsor.website %></td>
            <td class="pt-3 pe-3"><%= link_to 'Show', sponsor ,  class: "btn btn-dark"%></td>
            <td class="pt-3 pe-3"><%= link_to 'Edit', edit_sponsor_path(sponsor),  class: "btn btn-dark" %></td>
            <td class="pt-3 pe-3"><%= link_to 'Destroy', sponsor, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-dark" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


      <br>

      <%= link_to 'New Sponsor', new_sponsor_path,  class: "btn btn-dark" %>
    </div>

  </div>

</div>