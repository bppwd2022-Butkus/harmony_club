<div class="container bg_white p-5">

  <p id="notice"><%= notice %></p>

  <div class="row">
    
    <h1 class=col-12>Pages</h1>

    <div class="col-12" text center>
      <table>
        <thead>
          <tr>
            <th class="pe-3">Title</th>
            <th class="pe-3">Section</th>
            <th class="pe-3">Page type</th>
            <th class="pe-3">Permalink</th>
            <th class="pe-3">Visible</th>
            <th class="pe-3">Position</th>
            <th class="pe-3">Content</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pages.each do |page| %>
            <tr>
              <td class="pt-3 pe-3"><%= page.title %></td>
              <td class="pt-3 pe-3"><%= page.section_id %></td>
              <td class="pt-3 pe-3"><%= page.page_type %></td>
              <td class="pt-3 pe-3"><%= page.permalink %></td>
              <td class="pt-3 pe-3"><%= page.visible %></td>
              <td class="pt-3 pe-3"><%= page.position %></td>
              <td class="pt-3 pe-3"><%= page.content %></td>
              <td class="pt-3 pe-3"><%= link_to 'Show', page , class: "btn btn-dark"%></td>
              <td class="pt-3 pe-3"><%= link_to 'Edit', edit_page_path(page), class: "btn btn-dark" %></td>
              <td class="pt-3 pe-3"><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-dark" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Page', new_page_path,  class: "btn btn-dark" %>
    </div>

  </div>

</div>