<%= form_with(model: page) do |form| %>
  <% if page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
        <% page.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field my-3">
    <%= form.label :title , class: "form-label"%>
    <%= form.text_field :title , class: "form-control"%>
  </div>

  <div class="field my-3">
    <%= form.label :section_id , class: "form-label"%>
    <%= form.number_field :section_id , class: "form-control"%>
  </div>

  <div class="field my-3">
    <%= form.label :page_type , class: "form-label"%>
    <%= form.text_field :page_type, class: "form-control" %>
  </div>

  <div class="field my-3">
    <%= form.label :permalink , class: "form-label"%>
    <%= form.text_field :permalink, class: "form-control" %>
  </div>

  <div class="field my-3">
    <%= form.label :visible , class: "form-check-label"%>
    <%= form.check_box :visible, class: "form-check-label" %>
  </div>

  <div class="field my-3">
    <%= form.label :position , class: "form-label"%>
    <%= form.number_field :position, class: "form-control" %>
  </div>

  <div class="field my-3">
    <%= form.label :content , class: "form-label"%>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="actions my-3">
    <%= form.submit  class:  "btn btn-dark" %>
  </div>
<% end %>
