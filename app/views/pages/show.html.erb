

<div class="container bg_white p-5">

  <div clas="row">
    <div class="col-12">
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Title:</strong>
        <%= @page.title %>
      </p>

      <p>
        <strong>Section:</strong>
        <%= @page.section_id %>
      </p>

      <p>
        <strong>Page type:</strong>
        <%= @page.page_type %>
      </p>

      <p>
        <strong>Permalink:</strong>
        <%= @page.permalink %>
      </p>

      <p>
        <strong>Visible:</strong>
        <%= @page.visible %>
      </p>

      <p>
        <strong>Position:</strong>
        <%= @page.position %>
      </p>

      <p>
        <strong>Content:</strong>
        <%= @page.content %>
      </p>

      <%= link_to 'Edit', edit_page_path(@page), class: "btn btn-dark"  %> |
      <%= link_to 'Back', pages_path , class: "btn btn-dark" %>
    </div>
  </div>

</div>