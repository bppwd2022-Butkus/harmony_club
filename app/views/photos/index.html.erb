<div class="container bg_white p-5">

  <p id="notice"><%= notice %></p>

  <div class="row">
    
    <h1 class=col-12>Photo</h1>

    <div class="col-12" text center>
      <table>
        <thead>
          <tr>
            <th class="pt-3 pe-3">Album</th>
            <th class="pt-3 pe-3">Title</th>
            <th class="pt-3 pe-3">Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @photos.each do |photo| %>
            <tr>
              <td class="pt-3 pe-3"><%= photo.album_id %></td>
              <td class="pt-3 pe-3"><%= photo.title %></td>
              <td class="pt-3 pe-3"><%= photo.description %></td>
              <td class="pt-3 pe-3"><%= link_to 'Show', photo,  class: "btn btn-dark" %></td>
              <td class="pt-3 pe-3"><%= link_to 'Edit', edit_photo_path(photo),  class: "btn btn-dark" %></td>
              <td class="pt-3 pe-3"><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-dark" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>


      <br>

      <%= link_to 'New Photo', new_photo_path,  class: "btn btn-dark" %>
    </div>

  </div>

</div>