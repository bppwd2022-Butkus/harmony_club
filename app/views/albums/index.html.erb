<div class="container bg_white p-5">

  <p id="notice"><%= notice %></p>

  <div class="row">
    
    <h1 class=col-12>Albums</h1>

    <div class="col-12" text center>
      <table>
        <thead>
          <tr>
            <th class="pt-3 pe-3">Title</th>
            <th class="pt-3 pe-3">Description</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @albums.each do |album| %>
            <tr>
              <td class="pt-3 pe-3"><%= album.title %></td>
              <td class="pt-3 pe-3"><%= album.description %></td>
              <td class="pt-3 pe-3"><%= link_to 'Show', album,  class: "btn btn-dark" %></td>
              <td class="pt-3 pe-3"><%= link_to 'Edit', edit_album_path(album),  class: "btn btn-dark" %></td>
              <td class="pt-3 pe-3"><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-dark" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>


      <br>

      <%= link_to 'New Album', new_album_path,  class: "btn btn-dark" %>
    </div>

  </div>

</div>